<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/talk_cardview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="false">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/talk_item_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop" />
        <!--昵称区域-->
        <TextView
            android:id="@+id/home_talk_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/talk_item_head"
            android:text="阿呆"
            android:textColor="#333333"
            android:textSize="18sp" />

        <Button
            android:layout_width="80sp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"

            android:background="@drawable/botton_shape_1"

            android:text="关注"
            android:textColor="@color/white" />
        <!--标题区域,最大行数为2-->
        <TextView
            android:id="@+id/talk_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/talk_item_head"

            android:layout_margin="8dp"
            android:maxLines="2"
            android:text="标题"
            android:textColor="#333"
            android:textSize="18dp" />

        <LinearLayout
            android:id="@+id/image_talk_grope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/talk_text_title"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="4dp"
                android:id="@+id/talk_image_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_margin="4dp"
                android:id="@+id/talk_image_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_margin="4dp"
                android:id="@+id/talk_image_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/image_talk_grope"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@mipmap/dianzan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:text="123"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="14dp" />


            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@mipmap/pinglun" />

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/talk_num"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:text="123"
                android:textColor="#333333"
                android:textSize="14dp" />

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@mipmap/share" />

            <TextView
                android:gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:text="123"
                android:textColor="#333333"
                android:textSize="14dp" />

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>